<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8C78080"
    tools:context=".fragments.Profesoradd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/Texttituo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Nombre:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtnomp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom|left"
                android:hint="nombre profesor"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/Text2p"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Edad:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtedadp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom|left"
                android:hint="edad profesor"
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/Text3p"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Ciclo:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtciclop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom|left"
                android:hint="ciclo profesor"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/Text4p"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Curso:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtcursop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom|left"
                android:hint="cuso profesor"
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/Text5p"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Despacho:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtdespach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom|left"
                android:hint="despacho"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnguarprof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="guardar" />

        <Button
            android:id="@+id/btnlimprof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear" />

    </LinearLayout>



</FrameLayout>